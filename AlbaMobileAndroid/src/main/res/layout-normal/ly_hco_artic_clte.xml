<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="5dp"
              android:paddingLeft="5dp"
              android:paddingRight="5dp">

    <TextView
      android:id="@+id/lyhcoArtCl_TipoDoc"
      style="@style/Texto12"
      android:layout_width="0dp"
      android:layout_height="30dp"
      android:layout_weight="1.5"
      android:gravity="left"
      android:text="@string/documento"
      android:maxLines="1"
      android:paddingRight="2dp"/>

    <TextView
      android:id="@+id/lyhcoArtCl_Fecha"
      style="@style/Texto12"
      android:layout_width="0dp"
      android:layout_height="30dp"
      android:layout_weight="2.8"
      android:gravity="right"
      android:text="@string/fecha" />

    <TextView
      android:id="@+id/lyhcoArtCl_Serie"
      style="@style/Texto12"
      android:layout_width="0dp"
      android:layout_height="30dp"
      android:layout_weight="1"
      android:gravity="right"
      android:text="@string/etq_serienum"
      />

    <TextView
      android:id="@+id/lyhcoArtCl_Numero"
      style="@style/Texto12"
      android:layout_width="0dp"
      android:layout_height="30dp"
      android:layout_weight="2"
      android:gravity="right"
      android:text="@string/hint_serienum" />

    <TextView
      android:id="@+id/lyhcoArtCl_Cant"
      style="@style/Texto12"
      android:layout_width="0dp"
      android:layout_height="30dp"
      android:layout_weight="2"
      android:gravity="right"
      android:text="@string/cantidad" />

    <TextView
      android:id="@+id/lyhcoArtCl_Precio"
      style="@style/Texto12"
      android:layout_width="0dp"
      android:layout_height="30dp"
      android:layout_weight="2"
      android:gravity="right"
      android:text="@string/precio" />

    <TextView
      android:id="@+id/lyhcoArtCl_PrecioII"
      style="@style/Texto12"
      android:layout_width="0dp"
      android:layout_height="30dp"
      android:layout_weight="2"
      android:gravity="right"
      android:text="@string/precio" />

    <TextView
      android:id="@+id/lyhcoArtCl_Dto"
      style="@style/Texto12"
      android:layout_width="0dp"
      android:layout_height="30dp"
      android:layout_weight="1.5"
      android:gravity="right"
      android:text="@string/dto" />

</LinearLayout>