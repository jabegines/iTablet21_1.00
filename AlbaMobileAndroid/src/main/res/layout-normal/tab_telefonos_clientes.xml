<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              >

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/gris_alba"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    >

    <ImageView
      android:id="@+id/imgvArtOft"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="0.1"
      android:contentDescription="@string/aceptar"
      android:src="@drawable/cliente_azul" />

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="0.9"
      android:orientation="vertical"
      android:paddingLeft="10dp" >

      <TextView
        android:id="@+id/tvTlfNombreClte"
        style="@style/Texto14.Negrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombrefiscal" />

      <TextView
        android:id="@+id/tvTlfNComClte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombrecomercial"
        style="@style/Texto14"/>
    </LinearLayout>
  </LinearLayout>

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rvTlfCltes"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="0.4"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      />
  <View
    android:layout_width="wrap_content"
    android:layout_height="10dp"
    android:background="@drawable/separador"
    />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    android:layout_weight="0.6">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp"
      >

      <TextView
          android:id="@+id/tvTlfContacto"
          style="@style/Texto16.Negrita"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/contacto"
          android:textSize="12sp" />

      <EditText
          android:id="@+id/edtContacto"
          style="@style/Texto14"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:enabled="false"
          android:inputType="text"
          android:maxLength="40"
          android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp" >

      <TextView
          android:id="@+id/tvTlfTelf1"
          style="@style/Texto16.Negrita"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/tlf1"
          android:textSize="12sp" />

      <EditText
          android:id="@+id/edtTelf1"
          style="@style/Texto14"
          android:layout_width="180dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:enabled="false"
          android:inputType="number"
          android:maxLength="9"
          android:textSize="12sp" />

      <ImageButton
        android:id="@+id/imbMainConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/aceptar"
        android:onClick="llamarTelf1"
        android:src="@android:drawable/ic_menu_call" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp" >

      <TextView
          android:id="@+id/tvTlfTelf2"
          style="@style/Texto16.Negrita"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/tlf2"
          android:textSize="12sp" />

      <EditText
          android:id="@+id/edtTelf2"
          style="@style/Texto14"
          android:layout_width="180dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:enabled="false"
          android:inputType="number"
          android:maxLength="9"
          android:textSize="12sp" />

      <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/aceptar"
        android:onClick="llamarTelf2"
        android:src="@android:drawable/ic_menu_call" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp" >

      <TextView
          android:id="@+id/tvTlfEmail"
          style="@style/Texto16.Negrita"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/email"
          android:textSize="12sp" />

      <EditText
          android:id="@+id/edtTlfEmail"
          style="@style/Texto14"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:enabled="false"
          android:inputType="textEmailAddress"
          android:maxLength="50"
          android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp" >

      <TextView
          android:id="@+id/tvTlfObs"
          style="@style/Texto16.Negrita"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/observ"
          android:textSize="12sp" />

      <EditText
          android:id="@+id/edtObsTlf"
          style="@style/Texto14"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:enabled="false"
          android:inputType="text"
          android:maxLength="30"
          android:textSize="12sp" />

    </LinearLayout>
  </LinearLayout>

  <View
    android:layout_width="wrap_content"
    android:layout_height="1dp"
    android:layout_marginTop="15dp"
    android:background="#EFEFEF"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_marginBottom="2dp"
      android:baselineAligned="false"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/imvMenuTlf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:onClick="menuTelefonos"
        android:src="@drawable/mas" />

    <ImageView
        android:id="@+id/imvNuevoTlf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@+id/imvMenuTlf"
        android:layout_toStartOf="@+id/imvMenuTlf"
        android:onClick="nuevoTelf"
        android:src="@drawable/nuevo_sin"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imvEditarTlf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@+id/imvNuevoTlf"
        android:layout_toStartOf="@+id/imvNuevoTlf"
        android:onClick="editarTelf"
        android:src="@drawable/editar_sin"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imvBorrarTlf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@+id/imvEditarTlf"
        android:layout_toStartOf="@+id/imvEditarTlf"
        android:onClick="borrarTelf"
        android:src="@drawable/borrar_sin"
        android:visibility="visible" />

  </RelativeLayout>

</LinearLayout>