<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/lyhcoCodigo"
        style="@style/Texto14.Negrita"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/codigo"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lyhcoDescr"
        style="@style/Texto14.Negrita"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="4.3"
        android:text="@string/descr"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lyhcoStock"
        style="@style/Texto14.Negrita"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="0.7"
        android:gravity="right"
        android:text="@string/stock"
        android:textSize="12sp" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
      android:id="@+id/lyhcoFormato"
      style="@style/Texto16"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      android:gravity="left"
      android:text="@string/formato" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp" >

    <TextView
        android:id="@+id/lyhcoPiezPedida"
        style="@style/Texto16"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="2"
        android:gravity="right"
        android:text="PiezPed"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/lyhcoCantPedida"
        style="@style/Texto12"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="2"
        android:gravity="right"
        android:text="@string/ventas"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/lyhcoCant"
        style="@style/Texto14"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="2"
        android:gravity="right"
        android:text="@string/cantidad"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/lyhcoPrecio"
        style="@style/Texto12"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="2"
        android:gravity="right"
        android:text="@string/precio"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/lyhcoDto"
        style="@style/Texto12"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:gravity="right"
        android:text="@string/dto"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/lyhcoCajas"
        style="@style/Texto12"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1.9"
        android:gravity="right"
        android:paddingRight="5dp"
        android:text="@string/cajas"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/lyhcoFecha"
        style="@style/Texto12"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="2.1"
        android:gravity="right"
        android:text="@string/fecha"
        android:textSize="10sp" />

  </LinearLayout>

</LinearLayout>
