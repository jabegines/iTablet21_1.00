<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF"
              android:orientation="vertical"
              android:padding="5dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#FFFFFF"
      android:orientation="vertical"
      android:paddingRight="5dp"
      android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">

      <TextView
          android:id="@+id/tvArtIm_Descr"
          style="@style/Texto14.Negrita"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/pendiente"
          android:textSize="12sp" />

    </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_marginTop="5dp"
          android:layout_weight="0.45"
          android:background="#FFFFFF"
          android:orientation="horizontal">

          <TextView
              android:id="@+id/textView7"
              style="@style/Texto14.Negrita"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="left"
              android:text="@string/documento"
              android:textSize="12sp" />

          <TextView
              android:id="@+id/textView5"
              style="@style/Texto14.Negrita"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="right"
              android:text="@string/importe"
              android:textSize="12sp" />

          <TextView
              android:id="@+id/textView6"
              style="@style/Texto14.Negrita"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="right"
              android:text="@string/cobrado"
              android:textSize="12sp" />

      </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <ListView
        android:id="@+id/lvPdtes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="3"
        android:background="#FFFFFF"
        android:listSelector="@drawable/list_selector">

    </ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <LinearLayout
        style="@style/Texto14"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvEjer"
            style="@style/Texto14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_pendiente"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvPd_Pdte"
            style="@style/Texto14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="12sp" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvRec_Datos"
            style="@style/Texto14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/fecha"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvPd_Fecha"
            style="@style/Texto14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView4"
            style="@style/Texto14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/fechavto"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvPd_FVto"
            style="@style/Texto14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView3"
            style="@style/Texto14"
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/fpago"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvPd_FPago"
            style="@style/Texto14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:textSize="12sp" />
      </LinearLayout>

    </LinearLayout>

  </LinearLayout>

</LinearLayout>