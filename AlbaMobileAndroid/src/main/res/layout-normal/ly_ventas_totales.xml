<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:baselineAligned="true">


  <LinearLayout
    android:id="@+id/llyVL_TotalesDoc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/mi_borde_sombra"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="7dp"
    android:paddingLeft="1dp"
    >

    <LinearLayout
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        android:orientation="vertical"
        android:padding="5dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="0.6"
          android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45"
            android:orientation="horizontal">

          <TextView
              android:id="@+id/textView3"
              style="@style/Texto12"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.2"
              android:gravity="end"
              android:text="@string/lyn_baseimp" />

          <TextView
              android:id="@+id/textView4"
              style="@style/Texto12"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.15"
              android:gravity="end"
              android:text="@string/porciva" />

          <TextView
              android:id="@+id/textView5"
              style="@style/Texto12"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.15"
              android:gravity="end"
              android:text="@string/impiva" />

          <TextView
              android:id="@+id/textView6"
              style="@style/Texto12"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.15"
              android:gravity="end"
              android:text="@string/porcre_small" />

          <TextView
              android:id="@+id/textView7"
              style="@style/Texto12"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.15"
              android:gravity="end"
              android:text="@string/impre" />

          <TextView
              android:id="@+id/textView8"
              style="@style/Texto12"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.2"
              android:gravity="end"
              android:text="@string/totalbase" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/gris_alba" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvVl_BasesDoc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
        />

      </LinearLayout>
    </LinearLayout>

    <LinearLayout
      android:orientation="vertical"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="0.2"
      >

      <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="@string/verdtos"
        android:background="@color/gris_alba"
        android:layout_marginTop="5dp"
        android:onClick="verDesctos"
        android:clickable="true"
        android:layout_marginRight="5dp"
        android:layout_gravity="right"
        android:gravity="center_horizontal"
        style="@style/Texto12"/>

      <TextView
        android:id="@+id/tvVL_Total"
        style="@style/Texto16.Negrita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:text="@string/totalbase"
        android:layout_marginRight="5dp"/>
    </LinearLayout>


  </LinearLayout>


</LinearLayout>