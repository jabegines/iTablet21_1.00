<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="6dp" >

  <TextView
      android:id="@+id/cltrt_orden"
      style="@style/Texto14"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="0.1"
      android:text="@string/clientes" />

  <TextView
      android:id="@+id/cltrt_codigo"
      style="@style/Texto14"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="0.13"
      android:text="@string/clientes" />

  <TextView
    android:id="@+id/cltrt_nombre"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="0.5"
    android:text="@string/clientes"
    style="@style/Texto14"
    android:lines="1"/>

  <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/imvTieneInc"
    android:contentDescription="@string/cajas"
    android:background="@drawable/clte_con_incid"/>

</LinearLayout>
