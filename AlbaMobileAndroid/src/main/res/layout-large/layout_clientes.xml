<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="6dp">

  <TextView
    android:id="@+id/lyclt_codclte"
    android:layout_width="0dp"
    android:layout_height="30dp"
    android:layout_weight="0.2"
    android:text="@string/clientes"
    android:textSize="20sp" />

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="0.8">

    <TextView
      android:id="@+id/lyclt_nombreclte"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/clientes"
      android:textSize="20sp" />

    <TextView
      android:id="@+id/lyclt_nombreclte2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/clientes"
      android:textSize="14sp" />

  </LinearLayout>

  <ImageView
      android:id="@+id/lyclt_imgNoVender"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/bio_restar_32"
      android:visibility="gone"
      app:srcCompat="@drawable/bio_restar_32" />


</LinearLayout>
