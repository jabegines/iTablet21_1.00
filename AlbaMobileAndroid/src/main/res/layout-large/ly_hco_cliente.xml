<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical" >

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
      android:id="@+id/lyhcoCodigo"
      style="@style/Texto18.Negrita"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="@string/codigo" />

    <TextView
      android:id="@+id/lyhcoDescr"
      style="@style/Texto18.Negrita"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_weight="4"
      android:text="@string/descr" />

    <TextView
      android:id="@+id/lyhcoStock"
      style="@style/Texto18.Negrita"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_weight="1"
      android:text="@string/stock"
      android:gravity="right"/>

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
      android:id="@+id/lyhcoFormato"
      style="@style/Texto16"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="0.4"
      android:gravity="left"
      android:text="@string/formato"/>

    <TextView
      android:id="@+id/lyhcoTxtArtHab"
      style="@style/Texto14"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="left"
      android:text="@string/btn_textolin"
      android:textStyle="italic"/>


  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp" >

    <TextView
        android:id="@+id/lyhcoPiezPedida"
        style="@style/Texto16"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1.5"
        android:gravity="right"
        android:text="PiezPed"
        android:textColor="@android:color/holo_orange_dark"/>

    <TextView
      android:id="@+id/lyhcoCantPedida"
      style="@style/Texto16"
      android:layout_width="0dp"
      android:layout_height="30dp"
      android:layout_weight="1.5"
      android:gravity="right"
      android:text="@string/ventas"
      android:textColor="@android:color/holo_orange_dark"/>

    <TextView
      android:id="@+id/lyhcoCant"
      style="@style/Texto16"
      android:layout_width="0dp"
      android:layout_height="30dp"
      android:layout_weight="2"
      android:gravity="right"
      android:text="@string/cantidad" />

    <TextView
      android:id="@+id/lyhcoPrecio"
      style="@style/Texto16"
      android:layout_width="0dp"
      android:layout_height="30dp"
      android:layout_weight="2"
      android:gravity="right"
      android:text="@string/precio" />

    <TextView
      android:id="@+id/lyhcoDto"
      style="@style/Texto16"
      android:layout_width="0dp"
      android:layout_height="30dp"
      android:layout_weight="1"
      android:gravity="right"
      android:text="@string/dto" />

    <TextView
      android:id="@+id/lyhcoPrNeto"
      style="@style/Texto16"
      android:layout_width="0dp"
      android:layout_height="30dp"
      android:layout_weight="2"
      android:gravity="right"
      android:text="@string/precio" />

    <TextView
      android:id="@+id/lyhcoCajas"
      style="@style/Texto16"
      android:layout_width="0dp"
      android:layout_height="30dp"
      android:layout_weight="2"
      android:gravity="right"
      android:text="@string/cajas" />

    <TextView
      android:id="@+id/lyhcoFecha"
      style="@style/Texto16"
      android:layout_width="0dp"
      android:layout_height="30dp"
      android:layout_weight="2.5"
      android:gravity="right"
      android:text="@string/fecha"/>

  </LinearLayout>

</LinearLayout>
