<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:baselineAligned="true"
              android:orientation="vertical">

  <LinearLayout
    android:id="@+id/llyVL_TotalesDoc"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:background="@drawable/mi_borde_sombra"
    android:orientation="horizontal"
    android:paddingLeft="1dp"
    android:paddingRight="1dp">

    <View
      android:layout_width="1dp"
      android:layout_height="50dp"
      android:layout_gravity="center_vertical"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:background="@color/gris_alba"/>

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="0.7"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/textView3"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="0.2"
          android:gravity="end"
          android:text="@string/baseimp"/>

        <TextView
          android:id="@+id/textView4"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="0.15"
          android:gravity="end"
          android:text="@string/porciva"/>

        <TextView
          android:id="@+id/textView5"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="0.15"
          android:gravity="end"
          android:text="@string/impiva"/>

        <TextView
          android:id="@+id/textView6"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="0.15"
          android:gravity="end"
          android:text="@string/porcre"/>

        <TextView
          android:id="@+id/textView7"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="0.15"
          android:gravity="end"
          android:text="@string/impre"/>

        <TextView
          android:id="@+id/textView8"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="0.2"
          android:gravity="end"
          android:text="@string/totalbase"/>
      </LinearLayout>

      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/gris_alba"/>

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rvVl_BasesDoc"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="0.8"
      />

    </LinearLayout>

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="0.2"
      android:orientation="vertical"
      >

      <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="4dp"
        android:background="@color/gris_alba"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:onClick="verDesctos"
        android:text="@string/verdtos"/>

      <TextView
        android:id="@+id/tvVL_Total"
        style="@style/Texto24.Negrita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:gravity="right"
        android:text="@string/totalbase"/>
    </LinearLayout>

  </LinearLayout>


</LinearLayout>