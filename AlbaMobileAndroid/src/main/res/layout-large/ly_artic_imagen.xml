<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="0.2">

    <ImageView
        android:id="@+id/imgvArtIm"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:contentDescription="@string/articulos"
        android:scaleType="fitCenter"
        />
  </LinearLayout>

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:baselineAligned="false"
      android:layout_weight="0.8"
      android:layout_marginLeft="5dp">

    <TextView
        android:id="@+id/tvArticulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/descr"
        style="@style/Texto20.Negrita"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:baselineAligned="false">

      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

          <TextView
              android:id="@+id/tvCodigoArt"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/codigo"/>

          <TextView
              android:id="@+id/tvDescrFto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="15dp"
              android:text="@string/formato"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            >

          <LinearLayout
              android:orientation="vertical"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="0.5">

            <TextView
                android:id="@+id/tvExistencias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stock"
                style="@style/Texto16"
                android:gravity="end"
                android:drawableLeft="@drawable/ctlg_stock"
                android:background="@color/gris_alba"
                android:padding="3dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tvPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/precio"
                style="@style/Texto16"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:drawableLeft="@drawable/ctlg_precio"
                android:background="@color/gris_alba"
                android:padding="3dp"
                android:layout_marginRight="2dp"/>

            <TextView
                android:id="@+id/tvDescuento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/porciva"
                style="@style/Texto16"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:background="@color/gris_alba"
                android:drawableLeft="@drawable/ctlg_dto"
                android:padding="3dp"/>

          </LinearLayout>

          <LinearLayout
              android:orientation="vertical"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="0.5"
              android:layout_marginLeft="2dp">

            <TextView
                android:id="@+id/tvUnidadesCaja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cajas"
                style="@style/Texto16"
                android:gravity="end"
                android:drawableLeft="@drawable/ctlg_cajas"
                android:background="@color/gris_alba"
                android:layout_marginTop="5dp"
                android:padding="3dp"
                android:layout_marginRight="2dp"/>

            <TextView
                android:id="@+id/tvPrCajas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/precio"
                style="@style/Texto16"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:drawableLeft="@drawable/ctlg_precio"
                android:background="@color/gris_alba"
                android:padding="3dp"
                android:layout_marginRight="2dp"/>

            <TextView
                android:id="@+id/tvDtCajas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/porciva"
                style="@style/Texto16"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:background="@color/gris_alba"
                android:drawableLeft="@drawable/ctlg_dto"
                android:padding="3dp"/>

          </LinearLayout>
        </LinearLayout>
        <!-- La propiedad android:text tiene un texto cualquiera, no se corresponde con el contenido real de la etiqueta -->

      </LinearLayout>
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="0.1">

    <ImageView
        android:id="@+id/imgvArtImgOft"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/articulos"
        android:src="@drawable/oferta"
        android:layout_gravity="center"/>
  </LinearLayout>

</LinearLayout>
