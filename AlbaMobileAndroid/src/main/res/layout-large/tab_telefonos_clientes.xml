<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/gris_alba"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:layout_marginBottom="10dp">

    <ImageView
      android:id="@+id/imgvArtOft"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="0.1"
      android:contentDescription="@string/aceptar"
      android:src="@drawable/cliente_azul" />

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="0.9"
      android:orientation="vertical"
      android:paddingLeft="10dp" >

      <TextView
        android:id="@+id/tvTlfNombreClte"
        style="@style/Texto18.Negrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombrefiscal" />

      <TextView
        android:id="@+id/tvTlfNComClte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombrecomercial"
        style="@style/Texto18"/>
    </LinearLayout>
  </LinearLayout>


  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rvTlfCltes"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="0.3"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_marginTop="10dp"
    />


  <View
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_marginTop="15dp"
    android:background="@drawable/separador"
    />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    android:layout_weight="0.5">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="5dp"
      android:layout_marginTop="10dp" >

      <TextView
        android:id="@+id/tvTlfContacto"
        style="@style/Texto20.Negrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contacto" />

      <EditText
        android:id="@+id/edtContacto"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:enabled="false"
        android:inputType="text"
        android:maxLength="40" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="5dp" >

      <TextView
        android:id="@+id/tvTlfTelf1"
        style="@style/Texto20.Negrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tlf1" />

      <EditText
        android:id="@+id/edtTelf1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:enabled="false"
        android:inputType="number"
        android:maxLength="9" />

      <ImageButton
        android:id="@+id/imbMainConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/aceptar"
        android:onClick="llamarTelf1"
        android:src="@android:drawable/ic_menu_call" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="5dp" >

      <TextView
        android:id="@+id/tvTlfTelf2"
        style="@style/Texto20.Negrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tlf2" />

      <EditText
        android:id="@+id/edtTelf2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:enabled="false"
        android:inputType="number"
        android:maxLength="9" />

      <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/aceptar"
        android:onClick="llamarTelf2"
        android:src="@android:drawable/ic_menu_call" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="5dp" >

      <TextView
        android:id="@+id/tvTlfEmail"
        style="@style/Texto20.Negrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email" />

      <EditText
        android:id="@+id/edtTlfEmail"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:enabled="false"
        android:inputType="textEmailAddress"
        android:maxLength="50" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp" >

      <TextView
        android:id="@+id/tvTlfObs"
        style="@style/Texto20.Negrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/observ" />

      <EditText
        android:id="@+id/edtObsTlf"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:enabled="false"
        android:inputType="text"
        android:maxLength="30" />

    </LinearLayout>
  </LinearLayout>

  <View
    android:layout_width="wrap_content"
    android:layout_height="1dp"
    android:layout_marginTop="15dp"
    android:background="#EFEFEF"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingRight="10dp">

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/imvMenuTlf"
      android:src="@drawable/mas"
      android:layout_alignParentRight="true"
      android:onClick="menuTelefonos"/>

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/imvNuevoTlf"
      android:layout_alignParentTop="false"
      android:layout_toLeftOf="@+id/imvMenuTlf"
      android:layout_toStartOf="@+id/imvMenuTlf"
      android:src="@drawable/nuevo_sin"
      android:layout_alignParentBottom="false"
      android:layout_alignWithParentIfMissing="false"
      android:layout_marginTop="15dp"
      android:visibility="visible"
      android:onClick="nuevoTelf"/>

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/imvEditarTlf"
      android:layout_alignParentTop="false"
      android:layout_toLeftOf="@+id/imvNuevoTlf"
      android:layout_toStartOf="@+id/imvNuevoTlf"
      android:src="@drawable/editar_sin"
      android:layout_alignParentBottom="false"
      android:layout_marginTop="15dp"
      android:visibility="visible"
      android:onClick="editarTelf"
      android:layout_marginRight="10dp"/>

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/imvBorrarTlf"
      android:layout_alignParentTop="false"
      android:layout_toLeftOf="@+id/imvEditarTlf"
      android:layout_toStartOf="@+id/imvEditarTlf"
      android:src="@drawable/borrar_sin"
      android:layout_alignParentBottom="false"
      android:layout_marginTop="15dp"
      android:visibility="visible"
      android:onClick="borrarTelf"
      android:layout_marginRight="10dp"/>

  </RelativeLayout>

</LinearLayout>