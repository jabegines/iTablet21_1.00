<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/imvLyClasific"
        android:contentDescription="@string/descr"
        android:background="@drawable/mi_borde"
        android:baselineAlignBottom="false"
        android:padding="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/descr"
        android:id="@+id/tvLyClasific"
        style="@style/Texto18"
        android:textColor="#FFFFFF"

        android:layout_alignRight="@+id/imvLyClasific"
        android:background="@color/azul_alba"
        android:maxLines="2"
        android:paddingBottom="10dp"
        android:gravity="left|top"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:autoText="false"/>

</LinearLayout>