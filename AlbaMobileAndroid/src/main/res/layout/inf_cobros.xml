<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_margin="5dp"
  >

  <include
      layout="@layout/ly_toolbar_large"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="10dp"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/textView1"
        style="@style/Texto18.Negrita"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.7"
        android:gravity="start"
        android:text="@string/cliente"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        style="@style/Texto18.Negrita"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start"
        android:text="@string/fecha"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        style="@style/Texto18.Negrita"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:text="@string/documento"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        style="@style/Texto18.Negrita"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:text="@string/importe"
        android:textSize="12sp"
        android:textStyle="bold" />
  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="#000000" />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rvInfCobros"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="3"
      >

  </androidx.recyclerview.widget.RecyclerView>


  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="#000000" />

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="10dp"
    android:layout_weight="0.3">

    <TextView
        android:id="@+id/textView5"
        style="@style/Texto24.Negrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/totalbase"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvicTotal"
        style="@style/Texto24.Negrita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="@string/totalbase"
        android:textSize="18sp" />
  </LinearLayout>

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/textView6"
        style="@style/Texto18.Negrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resdivisa"
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginBottom="5dp"
      android:layout_marginTop="5dp"
      android:background="#000000" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvResDivInfC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >

    </androidx.recyclerview.widget.RecyclerView>

  </LinearLayout>

</LinearLayout>