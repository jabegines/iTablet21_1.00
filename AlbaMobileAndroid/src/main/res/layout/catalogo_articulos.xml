<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_margin="5dp"
    android:baselineAligned="false">

    <include
        layout="@layout/ly_toolbar_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:listSelector="#00000000"
        android:numColumns="1"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">
    </GridView>

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/background_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/btnBuscar"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/lupa"
            android:onClick="buscarArt"
            android:text="@string/buscar"
            android:textAllCaps="false"
            android:textColor="@color/texto_botones"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnOrdenar"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/ordenacion_alf"
            android:onClick="ordenarArt"
            android:text="@string/ordenacion"
            android:textAllCaps="false"
            android:textColor="@color/texto_botones"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnPromociones"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/oferta"
            android:onClick="verPromociones"
            android:text="@string/promociones"
            android:textAllCaps="false"
            android:textColor="@color/texto_botones"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnAceptarCat"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/aceptartodo"
            android:onClick="aceptarCatalogo"
            android:text="@string/aceptar"
            android:textAllCaps="false"
            android:textColor="@color/texto_botones"
            android:textSize="14sp" />


    </LinearLayout>


</LinearLayout>