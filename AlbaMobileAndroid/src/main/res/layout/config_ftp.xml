<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="20dp">


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/editText2"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="20dp"
      android:layout_weight="0.4"
      android:inputType="textPersonName"
      android:text="@string/ftpservidor"
      android:textSize="24sp"/>

    <EditText
      android:id="@+id/edtServidorFtp"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_weight="0.6"
      android:inputType="text"
      android:maxLines="1"
      android:selectAllOnFocus="true"/>
  </LinearLayout>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/editText3"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="20dp"
      android:layout_weight="0.4"
      android:inputType="text"
      android:maxLines="1"
      android:text="@string/ftpusuario"
      android:textSize="24sp"/>

    <EditText
      android:id="@+id/edtUsuarioFtp"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_weight="0.6"
      android:inputType="text"
      android:maxLines="1"
      android:selectAllOnFocus="true"/>

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/editText4"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="0.4"
      android:inputType="textPersonName"
      android:text="@string/ftppassword"
      android:textSize="24sp"/>

    <EditText
      android:id="@+id/edtPasswordFtp"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_weight="0.6"
      android:inputType="text"
      android:maxLines="1"
      android:selectAllOnFocus="true"/>

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="10dp"
    android:paddingTop="15dp">

    <Button
      android:id="@+id/btnRem_Terminar"
      style="?android:attr/buttonBarButtonStyle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:drawableTop="@drawable/cancelar"
      android:onClick="cancelarConfFtp"
      android:text="@string/cancelar"
      android:textColor="@color/texto_botones"
      android:textSize="14sp"
      />

    <Button
      android:id="@+id/btnRem_Aceptar"
      style="?android:attr/buttonBarButtonStyle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:drawableTop="@drawable/aceptar"
      android:onClick="aceptarConfFtp"
      android:text="@string/aceptar"
      android:textColor="@color/texto_botones"
      android:textSize="14sp"
      />
  </LinearLayout>

</LinearLayout>