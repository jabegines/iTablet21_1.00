<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="#FFFFFFFF"
              android:orientation="horizontal"
              android:padding="5dp"
              tools:ignore="MissingDefaultResource">


  <ImageView
      android:id="@+id/imgFtoVend"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_weight="0.1"
      android:contentDescription="@string/codigo"
      app:srcCompat="@drawable/clte_con_incid"/>

  <TextView
      android:id="@+id/tvCodFto"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_weight="0.2"
      android:paddingLeft="5dp"
      android:text="@string/codigo"
      android:textSize="18sp" />

  <TextView
      android:id="@+id/tvDescrFto"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_weight="0.7"
      android:text="@string/descr"
      android:textSize="18sp" />

  <ImageView
      android:id="@+id/imgFtoEnHco"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_weight="0.1"
      android:contentDescription="@string/articulos"
      app:srcCompat="@drawable/marca_historico"/>

</LinearLayout>
