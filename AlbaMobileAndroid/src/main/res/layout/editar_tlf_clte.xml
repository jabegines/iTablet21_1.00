<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF"
              android:padding="20dp">


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    >

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="5dp"
      android:layout_marginTop="10dp" >

      <TextView
          android:id="@+id/tvTlfContacto"
          style="@style/Texto20.Negrita"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/contacto"
          android:textSize="12sp" />

      <EditText
          android:id="@+id/edtTlfContacto"
          android:layout_width="240dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:inputType="text"
          android:maxLength="40"
          android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="5dp" >

      <TextView
          android:id="@+id/tvTlfTelf1"
          style="@style/Texto20.Negrita"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/tlf1"
          android:textSize="12sp" />

      <EditText
          android:id="@+id/edtTlfTelf1"
          android:layout_width="180dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:inputType="number"
          android:maxLength="9"
          android:textSize="12sp" />

      <ImageButton
        android:id="@+id/imbMainConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/aceptar"
        android:onClick="llamarTelf1"
        android:src="@android:drawable/ic_menu_call" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="5dp" >

      <TextView
          android:id="@+id/tvTlfTelf2"
          style="@style/Texto20.Negrita"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/tlf2"
          android:textSize="12sp" />

      <EditText
          android:id="@+id/edtTlfTelf2"
          android:layout_width="180dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:inputType="number"
          android:maxLength="9"
          android:textSize="12sp" />

      <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/aceptar"
        android:onClick="llamarTelf2"
        android:src="@android:drawable/ic_menu_call" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="5dp" >

      <TextView
          android:id="@+id/tvTlfEmail"
          style="@style/Texto20.Negrita"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/email"
          android:textSize="12sp" />

      <EditText
          android:id="@+id/edtTlfEmailCont"
          android:layout_width="450dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="55dp"
          android:inputType="textEmailAddress"
          android:maxLength="50"
          android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp" >

      <TextView
          android:id="@+id/tvTlfObs"
          style="@style/Texto20.Negrita"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/observ"
          android:textSize="12sp" />

      <EditText
          android:id="@+id/edtTlfObs"
          android:layout_width="450dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="24dp"
          android:inputType="text"
          android:maxLength="30"
          android:textSize="12sp" />

    </LinearLayout>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/gris_alba"
    android:paddingTop="15dp"
    android:layout_marginTop="30dp">

    <Button
        android:id="@+id/btnHco_Terminar"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/gris_alba"
        android:drawableTop="@drawable/cancelar"
        android:onClick="cancelar"
        android:text="@string/btn_cancelar" />

    <Button
        android:id="@+id/btnHco_Aceptar"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/gris_alba"
        android:drawableTop="@drawable/aceptar"
        android:onClick="aceptar"
        android:text="@string/btn_aceptar" />
  </LinearLayout>

</LinearLayout>